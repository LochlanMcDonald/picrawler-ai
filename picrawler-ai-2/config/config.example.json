{
  "openai_api_key": "your-api-key-here",
  "ai_settings": {
    "model": "gpt-4.1-mini",
    "max_output_tokens": 800,
    "temperature": 0.4,
    "vision_detail": "high",
    "request_timeout_s": 30
  },
  "robot_settings": {
    "movement_speed": 50,
    "turn_speed": 45,
    "step_delay": 0.05,
    "obstacle_distance_threshold_cm": 20,
    "dry_run_if_no_hardware": true
  },
  "camera_settings": {
    "resolution": [
      640,
      480
    ],
    "capture_interval_s": 2.5,
    "image_quality": 85,
    "flip_h": false,
    "flip_v": false
  },
  "behavior_settings": {
    "exploration": {
      "max_minutes": 10,
      "random_turn_chance": 0.25
    },
    "detection": {
      "confidence_threshold": 0.6,
      "max_search_seconds": 300
    },
    "following": {
      "target": "person",
      "lost_target_timeout_s": 10
    },
    "avoidance": {
      "avoid": [
        "person",
        "cat",
        "dog"
      ],
      "safety_distance_px": 120
    }
  },
  "logging_settings": {
    "log_level": "INFO",
    "save_images": true,
    "save_decisions": true
  }
}